<div class="page-header">
  <h2>Bridge House Admin Log in</h2>
</div>
<%= form_for(resource, class: 'form-horiztonal', as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.email_field :email, class: 'form-control', autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="col-sm-offset-2"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", class: 'btn btn-success col-sm-offset-2' %></div>
<% end %>

<%= render "devise/shared/links" %>
