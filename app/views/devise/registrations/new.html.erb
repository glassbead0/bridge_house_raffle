<div class="page-header">
  <h2>Create Bridge House Admin Account</h2>
</div>

<%= form_for(resource, class: 'form-horizontal', as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'control-label col-sm-2' %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %>
    <div class="col-sm-4">
      <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag :bridge_house_pin, nil, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= password_field_tag :bridge_house_pin, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-offset-2"><%= f.submit "Create Admin Account", class: 'btn btn-success' %></div>
<% end %>

<%= render "devise/shared/links" %>
